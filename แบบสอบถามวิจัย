let index = 0;
const card = document.getElementById("card");
const question = document.getElementById("question");
const progress = document.getElementById("progress");

question.innerText = aiQuestions[0];

function playSound() {
    clickSound.currentTime = 0;
    clickSound.play();
}

function answer() {
    playSound();
    index++;
    if (index < aiQuestions.length) {
        question.innerText = aiQuestions[index];
        progress.innerText = `${index + 1} / ${aiQuestions.length}`;
    } else {
        showLoading();
    }
}

// ===== PART 2 : ‡πÇ‡∏´‡∏•‡∏î‡∏î‡∏¥‡πâ‡∏á =====
function showLoading() {
    card.innerHTML = `
        <h2>‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏õ‡∏£‡∏∞‡∏°‡∏ß‡∏•‡∏ú‡∏•‡∏Ñ‡∏≥‡∏ï‡∏≠‡∏ö...</h2>
        <div class="loading-bar">
            <div class="loading"></div>
        </div>
    `;
    setTimeout(showLoveQuestion, 2600);
}

// ===== PART 3 : ‡∏Ñ‡∏≥‡∏ñ‡∏≤‡∏°‡∏û‡∏µ‡πà‡∏£‡∏±‡∏Å‡∏´‡∏ô‡∏π‡∏°‡∏±‡πâ‡∏¢ =====
const loveQuestions = [
    "‡∏û‡∏µ‡πà‡∏£‡∏±‡∏Å‡∏´‡∏ô‡∏π‡∏°‡∏±‡πâ‡∏¢",
    "‡πÑ‡∏°‡πà‡∏£‡∏±‡∏Å‡∏à‡∏£‡∏¥‡∏á‡πÜ ‡∏´‡∏£‡∏≠",
    "‡πÅ‡∏ï‡πà‡∏´‡∏ô‡∏π‡∏£‡∏±‡∏Å‡∏û‡∏µ‡πà‡∏ô‡∏∞",
    "‡∏£‡∏±‡∏Å‡∏´‡∏ô‡∏π‡πÑ‡∏î‡πâ‡πÑ‡∏´‡∏°",
    "‡∏£‡∏±‡∏Å‡∏´‡∏ô‡∏π‡πÄ‡∏ñ‡∏≠‡∏∞‡∏ô‡∏∞"
];

let loveIndex = 0;

function showLoveQuestion() {
    renderLove();
}

function renderLove() {
    card.innerHTML = `
        <h2>${loveQuestions[loveIndex]}</h2>
        <button class="option" onclick="loveYes()">‡∏£‡∏±‡∏Å‡∏Ñ‡∏£‡∏±‡∏ö</button>
        <button class="option" onclick="loveNo(this)">‡πÑ‡∏°‡πà‡∏£‡∏±‡∏Å‡∏Ñ‡∏£‡∏±‡∏ö</button>
    `;
}

function loveYes() {
    playSound();
    card.innerHTML = `
        <h2>‡∏≠‡∏µ‡πÅ‡∏Å‡πà üòà</h2>
        <p>‡∏à‡∏ö‡πÅ‡∏ö‡∏ö‡∏™‡∏≠‡∏ö‡∏ñ‡∏≤‡∏°‡πÅ‡∏•‡πâ‡∏ß</p>
    `;
}

function loveNo(btn) {
    playSound();

    btn.classList.add("shake");
    setTimeout(() => btn.classList.remove("shake"), 300);

    loveIndex++;
    if (loveIndex < loveQuestions.length) {
        setTimeout(renderLove, 300);
    } else {
        card.innerHTML = `
            <h2>‡∏Å‡πá‡πÑ‡∏î‡πâ ‡∏´‡∏ô‡∏π‡∏à‡∏∞‡πÑ‡∏õ‡∏£‡∏±‡∏Å‡∏Ñ‡∏ô‡∏≠‡∏∑‡πà‡∏ô üíî</h2>
        `;
    }
}
